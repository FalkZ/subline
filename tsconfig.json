{
  "compilerOptions": {
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "target": "ES2020"
  },
  "exclude": ["node_modules"]
}
